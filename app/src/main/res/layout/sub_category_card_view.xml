        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignRight="@+id/left_col"-->
        <!--android:layout_alignEnd="@+id/left_col" />-->

        <RelativeLayout
            android:id="@+id/bottom_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout"
            android:orientation="vertical"
            android:padding="2dp">

            <View
                android:id="@+id/divider_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/material_blue_grey_950"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />


            <TextView
                android:id="@+id/sub_cat_abstract_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_view"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="در این سفر هیئت آلمانی ضمن تاکید بر همکاری های سیاسی و اقتصادی بر نقش سازنده ایران در امنیت منطقه خاورمیانه تاکید به سزایی داشته و خواستار همکاری های بیشتر شدند......"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/sub_abstract_size" />


        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>