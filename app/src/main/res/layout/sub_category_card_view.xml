<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginBottom="8dp"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="10dp"
    android.support.v7.cardview:cardBackgroundColor="@color/white"
    android.support.v7.cardview:cardCornerRadius="2dp">


    <RelativeLayout
        android:id="@+id/card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="2dp">


        <LinearLayout
            android:id="@+id/left_col"
            android:layout_width="@dimen/left_col_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/khabar_chin_logo_left_col_height"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/khabar_chin">

                <!--<ImageView-->
                <!--android:id="@+id/news_likes"-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
