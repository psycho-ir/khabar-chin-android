<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="@color/light_gray">


        <LinearLayout
            android:id="@+id/left_col"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <com.example.ssarabadani.khabarchin_prototype.widgets.ImageViewMeasureSquare
                android:id="@+id/news_likes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@mipmap/like" />


            <TextView
                android:id="@+id/like_counter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:background="@drawable/circular"
                android:paddingTop="15dp"
                android:text="+1k"
                android:textColor="@color/abc_primary_text_material_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_blue_grey_950"
                android:paddingBottom="3dp"
                android:paddingTop="5dp" />


            <TextView
                android:id="@+id/agency_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="2dp"
                android:paddingTop="3dp"
                android:text="همشهری"
                android:textColor="@color/material_blue_grey_800" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_blue_grey_950"
                android:paddingBottom="3dp"
                android:paddingTop="5dp" />


            <TextView
                android:id="@+id/sub_cat_agency_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="2dp"
                android:paddingTop="3dp"
                android:text="سیاسی"
                android:textColor="@color/material_blue_grey_800" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_blue_grey_950"
                android:paddingBottom="3dp"
                android:paddingTop="5dp" />

            <ImageView
                android:id="@+id/agency_logo"
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>

        <com.example.ssarabadani.khabarchin_prototype.widgets.CardViewMeasureSquare
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/news_image_place"
            android:padding="2dp"
            android:background="@mipmap/ic_launcher"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/left_col"
            android:layout_alignParentLeft="@+id/left_col"
            >

            <com.example.ssarabadani.khabarchin_prototype.widgets.ImageViewMeasureSquare
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:id="@+id/news_image"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:scaleType="fitXY"

                />
        </com.example.ssarabadani.khabarchin_prototype.widgets.CardViewMeasureSquare>

        <RelativeLayout
            android:id="@+id/bottom_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/news_image_place"
            android:layout_alignStart="@+id/news_image_place"
            android:layout_below="@+id/news_image_place"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/sub_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:text="سفر هیئت وزیره آلمانی به ایران"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="16dp" />


            <View
                android:id="@+id/divider_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/sub_news_title"
                android:background="@color/material_blue_grey_950"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/sub_cat_abstract_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_view"
                android:paddingTop="5dp"
                android:text="در این سفر هیئت آلمانی ضمن تاکید بر همکاری های سیاسی و اقتصادی بر نقش سازنده لیران در امنیت منطقه خاورمیانه تاکید به سزایی داشته و خواستار همکاری های بیشتر شدند......" />


        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>