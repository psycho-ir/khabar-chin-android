                <!--android:layout_marginLeft="9dp"-->
                <!--android:background="@mipmap/like"-->
                <!--/>-->


                <!--<TextView-->
                <!--android:id="@+id/like_counter"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:paddingTop="17dp"-->
