<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/red">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="@string/khabar_chin_title"
            android:textColor="@color/white"
            android:textSize="@dimen/khabar_chin_logo"
            android:id="@+id/textView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="@dimen/page_name_padding"
            android:paddingBottom="@dimen/page_name_bottom_padding">
        <TextView
            android:id="@+id/page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="صفحه اصلی"
            android:textColor="@color/white"
            android:textSize="@dimen/page_name_text_size"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/page_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/face_down_arrow"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/page_name"
            android:layout_alignStart="@+id/page_name"
            android:layout_alignRight="@+id/page_name"
            android:layout_alignEnd="@+id/page_name" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>